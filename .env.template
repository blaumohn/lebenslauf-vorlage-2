# [context] Pipeline / Phase
PIPELINE=dev
PHASE=runtime

# [app]
APP_URL=https://beispiel.de
APP_BASE_PATH=

# [lebenslauf] Datenpfade (Build)
LEBENSLAUF_DATEN_PFAD=.local/lebenslauf
LEBENSLAUF_YAML_PFAD=
LEBENSLAUF_JSON_PFAD=var/tmp/lebenslauf.json
LEBENSLAUF_PUBLIC_PROFILE=default
LEBENSLAUF_LANG_DEFAULT=de
LEBENSLAUF_LANGS=de,en

# [security]
IP_SALT=change-me
TRUST_PROXY=0

# [captcha]
CAPTCHA_TTL_SECONDS=600
CAPTCHA_MAX_GET=100   # dev
# CAPTCHA_MAX_GET=15  # prod

# [contact]
CONTACT_MAX_POST=10   # dev
# CONTACT_MAX_POST=3  # prod
CONTACT_TO_EMAIL=kontakt@beispiel.de
CONTACT_FROM_EMAIL=web@beispiel.de

# [rate_limit]
RATE_LIMIT_WINDOW_SECONDS=600

# [mail]
MAIL_STDOUT=1         # dev
# MAIL_STDOUT=0       # prod
SMTP_HOST=smtp.beispiel.de
SMTP_PORT=587
SMTP_USER=user
SMTP_PASS=secret
SMTP_ENCRYPTION=tls
SMTP_FROM_EMAIL=kontakt@beispiel.de
SMTP_FROM_NAME=Lebenslauf

# [deploy] Deploy / Preview
FTP_SERVER_DIR=/home/preview/public
FTP_PORT=21
FTP_HOST=ftp.beispiel.de
FTP_USER=deploy
FTP_PASS=secret

# [tooling]
PY_PREFER_VENV=1
PY_ALLOW_SYSTEM=0
PY_PROMPT_ON_MISSING_VENV=1
AUTO_ENV_SETUP=0

# [tests] Smoke
CLONE_SOURCE=local
KEEP_SMOKE_CLONE=0
