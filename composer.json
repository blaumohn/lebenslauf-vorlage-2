{
  "name": "local/lebenslauf-vorlage",
  "description": "Shared-hosting-friendly CV site (PHP + Twig) with file-based state.",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "opis/json-schema": "^2.4",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "twig/twig": "^3.0",
    "phpmailer/phpmailer": "^6.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "php bin/dev"
    ],
    "cv:upload": "php bin/console cv:upload",
    "token:rotate": "php bin/console token:rotate",
    "captcha:cleanup": "php bin/console captcha:cleanup",
    "test": "phpunit"
  }
}
