{
  "name": "local/lebenslauf-vorlage",
  "description": "Shared-hosting-friendly CV site (PHP + Twig) with file-based state.",
  "type": "project",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/blaumohn/config-pipeline-spec-php"
    }
  ],
  "require": {
    "php": ">=8.1",
    "blaumohn/config-pipeline-spec-php": "dev-refactor/no-dotenv-config",
    "opis/json-schema": "^2.4",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "twig/twig": "^3.0",
    "phpmailer/phpmailer": "^6.9",
    "symfony/console": "^7.0",
    "symfony/config": "^7.0",
    "symfony/yaml": "^7.0",
    "symfony/process": "^7.0",
    "symfony/filesystem": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\Content\\": "src/content/",
      "App\\Http\\": "src/http/",
      "App\\Cli\\": "src/cli/php/"
    }
  },
  "scripts": {
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "php bin/cli run dev"
    ],
    "cv:build": "php bin/cli build dev cv",
    "cv:upload": "php bin/cli build dev upload",
    "token:rotate": "php bin/cli token rotate",
    "captcha:cleanup": "php bin/cli captcha dev",
    "config:get": "php bin/cli config get dev",
    "config:compile": "php bin/cli config compile dev",
    "config:lint": "php bin/cli config lint dev",
    "config:show": "php bin/cli config show dev",
    "test": "phpunit",
    "css:build": "npm run build:css",
    "build": "php bin/cli build dev",
    "build:dev": "php bin/cli build dev",
    "build:preview": "php bin/cli build preview",
    "setup": "php bin/cli setup dev",
    "setup:dev": "php bin/cli setup dev",
    "setup:preview": "php bin/cli setup preview",
    "tests:smoke": [
      "Composer\\Config::disableProcessTimeout",
      "php bin/cli python dev --add-path . tests/py/smoke.py"
    ],
    "deploy:preview": [
      "php bin/cli build preview"
    ]
  }
}
