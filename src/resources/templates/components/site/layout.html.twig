{% macro header(site_name, nav_items) %}
  {% import 'components/site/lib.html.twig' as ui %}
  <header>
    <div>
      <div class="badge">{{ site_name }}</div>
    </div>
    <nav>
      {% for item in nav_items %}
        {{ ui.nav_link(path(item.href), item.label) }}
      {% endfor %}
    </nav>
  </header>
{% endmacro %}

{% macro footer() %}
  <footer>
    <div>Keine Cookies. Keine Tracker. Kontakt nur per Formular.</div>
  </footer>
{% endmacro %}
