{% extends 'base.html.twig' %}

{% block content %}
  <h1>Kontakt</h1>
  <p class="muted">Nachrichten werden nicht gespeichert. Bitte fuer Rueckfragen E-Mail angeben.</p>

  {% if error %}
    <p class="muted">{{ error }}</p>
  {% endif %}

  <form method="post" action="/contact">
    <label>
      Name
      <input type="text" name="name" value="{{ form.name|default('') }}" required>
    </label>
    <br><br>
    <label>
      E-Mail
      <input type="email" name="email" value="{{ form.email|default('') }}" required>
    </label>
    <br><br>
    <label>
      Nachricht
      <textarea name="message" rows="6" required>{{ form.message|default('') }}</textarea>
    </label>
    <br><br>
    <label>
      CAPTCHA
      <input type="text" name="captcha_answer" required>
    </label>
    <input type="hidden" name="captcha_id" value="{{ captcha_id }}">
    <div class="section">
      <img src="/captcha.png?id={{ captcha_id }}" alt="CAPTCHA ist erforderlich, um das Kontaktformular abzusenden." />
    </div>
    <button type="submit">Senden</button>
  </form>
{% endblock %}
