{% macro view(cv, etiketten, is_private, name) %}
  {% import 'components/cv/lib.html.twig' as ui %}
  {% import 'components/cv/page.html.twig' as page %}
  {% import 'components/cv/sections.html.twig' as section %}
  <header>
    <div class="header-main">
      {{ ui.name_block(name, cv.kopfdaten.bereich) }}
    </div>
    <div class="header-aside">
      {% if is_private %}
        {{ page.contact_private(cv) }}
      {% else %}
        {{ page.contact_public() }}
      {% endif %}
    </div>
  </header>

  <main>
    <aside class="main-aside">
      {{ section.skills(
        etiketten.faehigkeiten._|default('Fähigkeiten'),
        cv.faehigkeiten,
        'section-skills'
      ) }}

      {{ section.languages(
        etiketten.sprachen._|default('Sprachen'),
        cv.sprachen,
        'section-languages'
      ) }}

      {{ section.interests(
        etiketten.interessen._|default('Interessen'),
        cv.interessen,
        'section-interests'
      ) }}
    </aside>

    <section class="main-body">
      {{ section.motivation(
        etiketten.motivation._|default('Motivation'),
        cv.motivation,
        'section-motivation'
      ) }}

      {{ section.entries(
        etiketten.berufserfahrung._|default('Berufserfahrung'),
        cv.berufserfahrung,
        'section-experience'
      ) }}

      {% if cv.opensource is defined %}
        {{ section.entries(
          etiketten.opensource._|default('Opensource'),
          cv.opensource,
          'section-opensource'
        ) }}
      {% endif %}

      {% if cv.vortraege is defined %}
        {{ section.talks(
          etiketten.vortraege._|default('Vorträge'),
          cv.vortraege,
          'section-talks'
        ) }}
      {% endif %}

      {{ section.education(
        etiketten.ausbildung._|default('Ausbildung'),
        cv.ausbildung,
        'section-education'
      ) }}
    </section>
  </main>

  {% if cv.footer.show %}
    {{ page.footer(name, cv.footer) }}
  {% endif %}
{% endmacro %}
